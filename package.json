{
  "name": "mercurius-apollo-registry",
  "version": "1.0.0",
  "description": "A schema reporting plugin for Mercurius",
  "main": "index.js",
  "scripts": {
    "test": "tap test",
    "test:ci": "tap --coverage-report=lcov test",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "lint:staged": "lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:nearform/mercurius-apollo-registry.git"
  },
  "keywords": [
    "mercurius",
    "graphql",
    "apollo",
    "schema",
    "reporter"
  ],
  "bugs": {
    "url": "https://github.com/nearform/mercurius-apollo-registry/issues"
  },
  "homepage": "https://github.com/nearform/mercurius-apollo-registry#readme",
  "engines": {
    "node": ">=12"
  },
  "author": "Nigel Hanlon <nigel.hanlon@nearform.com>",
  "license": "Apache-2.0",
  "dependencies": {
    "fastify-plugin": "^3.0.0",
    "node-fetch": "^2.6.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-config-standard": "^16.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^5.0.0",
    "faker": "^5.2.0",
    "fastify": "^3.7.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "prettier": "^2.1.2",
    "proxyquire": "^2.1.3",
    "sinon": "^10.0.1",
    "tap": "^15.0.2"
  },
  "peerDependencies": {
    "mercurius": "^6.11.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint:staged",
      "pre-push": "npm run lint && npm run test"
    }
  }
}
