{
  "name": "mercurius-apollo-registry",
  "version": "0.1.0",
  "description": "An experimental schema reporting plugin for Mercurius",
  "main": "index.js",
  "scripts": {
    "test": "tap test/*.test.js",
    "test:ci": "tap --coverage-report=lcov test/*.test.js",
    "cov": "tap --coverage-report=lcov test/*.test.js",
    "lint": "standard | snazzy",
    "lint:fix": "standard --fix | snazzy"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:nearform/mercurius-apollo-registry.git"
  },
  "keywords": [
    "mercurius",
    "graphql",
    "apollo",
    "schema",
    "reporter"
  ],
  "author": "NearForm Ltd",
  "license": "Apache-2.0",
  "dependencies": {
    "fastify-plugin": "^3.0.0",
    "node-fetch": "^2.6.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "faker": "^5.2.0",
    "fastify": "^3.7.0",
    "mercurius": "^6.11.0",
    "proxyquire": "^2.1.3",
    "sinon": "^9.2.4",
    "snazzy": "^9.0.0",
    "standard": "^16.0.3",
    "tap": "^14.11.0"
  }
}
